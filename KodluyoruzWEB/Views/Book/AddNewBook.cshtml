
@model BookModel

@{
    ViewData["Title"] = "AddNewBook";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <h3 class="display-4">Yeni Kitap Ekle</h3>

    @if (ViewBag.IsSuccess == true)
    {<div class="alert alert-success alert-dismissible fade show" role="alert">
    <strong>Başarılı bir şekilde kayıt edildi</strong>
    Detayları görmek için  <a asp-controller="Book" asp-action="GetBook"
                              asp-route-id="@ViewBag.BookId">buraya</a>tıklayınız
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
    }


<form method="post" asp-action="addnewbook" asp-controller="book" enctype="multipart/form-data">
    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <label asp-for="languageId">Başlık</label>
        <select asp-for="languageId" class="form-control" asp-items="ViewBag.languages">
            <option value="">Lütfen bir dil seçiniz</option>
        </select>
        <span asp-validation-for="languageId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.title">Başlık</label>
        <input asp-for="@Model.title" class="form-control" />
        <span asp-validation-for="title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="@Model.author">Yazar</label>
        <input asp-for="@Model.author" class="form-control" />
        <span asp-validation-for="author" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.desciption">Tanım</label>
        <textarea asp-for="@Model.desciption" class="form-control"></textarea>
        <span asp-validation-for="desciption" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.totalPages">Toplam Sayfa</label>
        <input asp-for="@Model.totalPages" class="form-control" />
        <span asp-validation-for="totalPages" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="category">Kategori</label>
        <input asp-for="category" class="form-control" />
        <span asp-validation-for="category" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.coverPhoto" class="control-label">Kategori</label>
        <div class="custom-file">
            <input asp-for="@Model.coverPhoto" class="custom-file-input" id="customFile" />
            <label class="custom-file-label" for="customFile">Resim Seçiniz</label>
        </div>
        <span asp-validation-for="@Model.coverPhoto" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="GalleryFiles" class="control-label">Kategori</label>
        <div class="custom-file">
            <input asp-for="GalleryFiles" class="custom-file-input" id="customFile" />
            <label class="custom-file-label" for="customFile">Resim Seçiniz</label>
        </div>
        <span asp-validation-for="GalleryFiles" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="BookPdf" class="control-label">Kategori</label>
        <div class="custom-file">
            <input asp-for="BookPdf" class="custom-file-input" id="customFile" />
            <label class="custom-file-label" for="customFile">Dosya Seçiniz</label>
        </div>
        <span asp-validation-for="BookPdf" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" class="btn btn-success" value="Ekle" />
    </div>
</form>
</div>


