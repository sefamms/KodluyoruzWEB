@inject Microsoft.AspNetCore.Identity.SignInManager<ApplicationUser> _signInManager


@if (_signInManager.IsSignedIn(User))
{
    <li class="nav-item dropdown">
        <a href="#" class="nav-link dropdown-toggle text-dark" id="navbarDropdown" role="button"
           data-toggle="dropdown">
        Merhaba @(User.FindFirst("UserFirstName").Value+""+User.FindFirst("UserLastName").Value) 
        </a>
        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
            <a class="dropdown-item" asp-action="logout" asp-controller="account">Çıkış</a>
            <a class="dropdown-item" asp-action="ChangePassword" asp-controller="account">Parola değiştir</a>
        </div>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link active" aria-current="page" asp-controller="account" asp-action="login" asp-route-returnUrl="@Context.Request.Path">Giriş Yap</a>
    </li>
    <li class="nav-item">
        <a class="nav-link active" aria-current="page" asp-controller="Account" asp-action="signup">Kayıt Ol</a>
    </li>
}


